import { PageView } from "@ui/components/page-view/page-view.slint";
import { PageViewItem } from "@ui/components/page-view/page-view-item.slint";

import { Sidebar } from "@ui/components/sidebar/sidebar.slint";
import { SidebarItem } from "@ui/components/sidebar/sidebar-item.slint";

export component MainWindow inherits Window {
    title: "LK Launcher";

    min-height: 500px;
    
    HorizontalLayout {
        sidebar := Sidebar {
            width: 225px;
            background: #2c2c2c;
            alignment: LayoutAlignment.start; 
            
            for index in 5: SidebarItem {
                Text {
                    text: "Page " + index;
                }
                activate => { page-view.active-page-index = index }
            }
        }

        page-view := PageView {
            min-width: 500px; 
            active-page-index: 0;

            for index in 5: PageViewItem {
                is-active: index == page-view.active-page-index;

                Text {
                    text: "Page " + index;
                }
            }
        }
    }

    
}